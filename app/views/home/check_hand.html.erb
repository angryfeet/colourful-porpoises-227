<turbo-frame id="hand_results">
  <%= form_with url: check_hand_path, method: 'post' do |f| %>
    <%= f.text_field :card_input, value: @hand.card_input %>
    <%= f.submit "Check hand", class: 'bg-blue-600 py-2 px-3 text-white border-blue-900 border-solid border' %>
  <% end %>
  <% if @hand.valid? %>
    <p class="mt-5 text-xl"><%= @hand.check_hand %></p>
  <% else %>
    <p class="text-red-500 text-xl mt-5">Invalid hand</p>
  <% end %>
</turbo-frame>